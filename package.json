{
  "name": "video-chat-app",
  "version": "1.0.0",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "dev:client": "rimraf dist/client && snowpack dev",
    "dev:server": "nodemon --watch '*.ts' --exec 'ts-node --project tsconfig.server.json' server/index.ts",
    "build:client": "rimraf dist/client && snowpack build --clean",
    "build:server": "rimraf dist/server && node buildServer.js",
    "build": "yarn build:client && yarn build:server",
    "start": "node dist/server/index.js",
    "eslint": "eslint --fix",
    "prettier": "prettier --write",
    "prepare": "husky install"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn prettier",
      "yarn eslint"
    ],
    "server/**/*.ts": [
      "yarn prettier",
      "yarn eslint"
    ],
    "*.{js,json,md,html,mjs}": [
      "yarn prettier"
    ]
  },
  "devDependencies": {
    "@snowpack/plugin-dotenv": "^2.2.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "esbuild": "^0.13.4",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "snowpack": "^3.8.8",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.4",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "firebase": "^9.1.2",
    "lit": "^2.0.2",
    "normalize.css": "^8.0.1",
    "uuid": "^8.3.2"
  }
}
