{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@fetcher/*": ["fetcher/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@types/*": ["types/*"],
      "@app": ["index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
